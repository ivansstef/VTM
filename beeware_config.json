{
    "name": "VTM",
    "formal_name": "VTM-System",
    "description": "Система обліку військово-технічного майна",
    "sources": ["vtm"],
    "author": "ivan.s",
    "author_email": "ivansstef@gmail.com",
    "bundle": "com.vtm.app",
    "version": "0.1.0",
    "url": "https://github.com/ivansstef/VTM",
    "license": "MIT",
    "android": {
        "app_name": "VTM System",
        "icon": "vtm/resources/icons/vtm",
        "version_code": 1,
        "permissions": [
            "android.permission.INTERNET",
            "android.permission.WRITE_EXTERNAL_STORAGE",
            "android.permission.READ_EXTERNAL_STORAGE"
        ],
        "builds": [
            {
                "requires": ["requests>=2.25.1"],
                "directory": "android",
                "template": "briefcase-android-gradle-template"
            }
        ]
    },
    "system_requires": [
        "python3",
        "flask>=3.0.0",
        "sqlalchemy>=2.0.0"
    ],
    "requires": [
        "flask==3.1.2",
        "flask-sqlalchemy==3.1.1",
        "flask-login==0.6.3",
        "reportlab==4.4.4",
        "openpyxl==3.1.5"
    ],
    "test_requires": [
        "pytest>=8.4.0",
        "pytest-cov>=4.1.0"
    ],
    "package_data": {
        "vtm": ["resources/icons/*", "resources/images/*"]
    }
}
